{
    "name": "mode_manager_vite",
    "private": true,
    "version": "0.0.0",
    "main": "dist-electron/index.js",
    "scripts": {
        "start": "vite",
        "build": "vue-tsc -b && rimraf dist-electron && vite build && electron-builder",
        "preview": "vite preview"
    },
    "dependencies": {
        "vue": "^3.5.13"
    },
    "devDependencies": {
        "@types/electron": "^1.6.12",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vue/tsconfig": "^0.7.0",
        "electron": "^33.3.1",
        "electron-builder": "^25.1.8",
        "electron-devtools-installer": "^4.0.0",
        "typescript": "~5.6.2",
        "vite": "^6.0.5",
        "vite-plugin-electron": "^0.29.0",
        "vite-plugin-electron-renderer": "^0.14.6",
        "vue-tsc": "^2.2.0"
    },
    "build": {
        "appId": "com.electron.desktop",
        "productName": "electron",
        "asar": true,
        "copyright": "Copyright © 2025 electron",
        "directories": {
            "output": "release/${version}"
        },
        "files": [
            "./dist",
            "./package.json",
            "./dist-electron"
        ],
        "mac": {
            "artifactName": "${productName}_${version}.${ext}",
            "target": [
                "dmg"
            ]
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "artifactName": "${productName}_${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "public/timg.ico",
            "uninstallerIcon": "public/timg.ico",
            "installerHeader": "public/timg.ico",
            "installerHeaderIcon": "public/timg.ico",
            "installerSidebar": "public/installerSiddebar.bmp",
            "uninstallerSidebar": "public/uninstallerSiddebar.bmp",
            "uninstallDisplayName": "${productName}${version}",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "TestApp",
            "deleteAppDataOnUninstall": true,
            "runAfterFinish": true,
            "menuCategory": false
        },
        "publish": [
            {
                "provider": "generic",
                "url": "http://127.0.0.1:8080"
            }
        ],
        "releaseInfo": {
            "releaseNotes": "版本更新的具体内容"
        }
    }
}
